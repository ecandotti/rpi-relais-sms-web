{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "useUnknownInCatchVariables": false,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "types": ["node"],
        "typeRoots": ["./src/types"],
        "lib": ["DOM", "ESNext"],
        "moduleResolution": "node",
        "module": "ESNext",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "baseUrl": "."
    },
    "exclude": ["node_modules"]
}
